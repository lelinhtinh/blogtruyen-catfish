{
  "name": "bt-preload-catfish",
  "version": "1.4.0",
  "description": "jQuery plugin for create preload and catfish banners",
  "alias": {
    "jquery": {
      "global": "$"
    },
    "js-cookie": {
      "global": "Cookies"
    }
  },
  "catfish": "dist/catfish.js",
  "preload": "dist/preload.js",
  "targets": {
    "catfish": {
      "source": "src/catfish.ts",
      "engines": {
        "browsers": "> 0.25%, not dead"
      },
      "outputFormat": "global",
      "sourceMap": false
    },
    "preload": {
      "source": "src/preload.ts",
      "engines": {
        "browsers": "> 0.25%, not dead"
      },
      "outputFormat": "global",
      "sourceMap": false
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:preload": "parcel build --target preload --no-cache",
    "build:catfish": "parcel build --target catfish --no-cache",
    "build": "yarn clean && yarn build:preload && yarn build:catfish && ncat node_modules/js-cookie/dist/js.cookie.min.js dist/catfish.js dist/preload.js --footer ncat.footer.js --output dist/bundle.js",
    "start:preload": "yarn clean && parcel watch --target preload --no-cache",
    "start:catfish": "yarn clean && parcel watch --target catfish --no-cache",
    "test": "jest",
    "lint": "eslint",
    "check": "tsc --noEmit",
    "ci": "yarn build && yarn test && yarn lint && yarn check"
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.7.0",
    "@parcel/transformer-typescript-types": "2.7.0",
    "@types/jquery": "^1",
    "@types/js-cookie": "^3.0.2",
    "@types/throttle-debounce": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "jquery": "^1",
    "js-cookie": "^3.0.1",
    "ncat": "^4.0.2",
    "parcel": "latest",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "is-mobile": "^3.1.1",
    "throttle-debounce": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jquery": true
    },
    "globals": {
      "Cookies": true
    },
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "dist"
  ]
}
